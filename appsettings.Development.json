{
  // External ID Customer tenant config
  "AzureAdB2C": {
    "Instance": "https://XXX.ciamlogin.com/",
    "ClientId": "XXX",
    "ClientSecret": "XXX",
    "Domain": "XXX", // GUID or XXX.onmicrosoft.com
    "SignedOutCallbackPath": "/signout-callback-oidc",
    "SignUpSignInPolicyId": "XXX", // CIAM policy name here
    "EnablePiiLogging": false,
    "CallbackPath": "/signin-oidc", // defaults to /signin-oidc
    "ResponseType": "code",
    "Scope": [
      "offline_access",
      "https://XXX.onmicrosoft.com/XXX/user_impersonation"
    ],
    "ResponseMode": "form_post",
    "UsePkce": true
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "Information",
      "Microsoft": "Information"
    }
  },
  "AllowedHosts": "*"
}
